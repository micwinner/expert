@model instrument.expert.dto.IM_AdminUserDto
@{
    ViewBag.Title = "专家库登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div style="color: #AAA; height: 200px; margin: 0 auto; margin-top: 150px; width: 300px;">
        @using (Html.BeginForm("login", "login", FormMethod.Post))
        {
            <div id="login_content">
                <dl>
                    <h4>用户名：</h4>
                    <dd>
                        @Html.TextBoxFor(m => m.admin_name, new {placeholder = "请输入用户名", @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.admin_name)</dd>
                </dl>
                <dl>
                    <h4>密码：</h4>
                    <dd>
                        @Html.PasswordFor(m => m.admin_password, new {placeholder = "请输入密码", @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.admin_password)</dd>
                </dl>
                <div style="height: 30px; margin: 0 auto; width: 50px;">
                    <input type="submit" class="btn btn-default" value="登 录"/>
                </div>
            </div>
        }
    </div>
</div>